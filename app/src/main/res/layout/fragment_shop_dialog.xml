<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/shop_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your account"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shop_dialog_activity_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_notifiations"
        android:scaleType="fitXY"
        android:background="@color/transparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/shop_dialog_tv"
        app:layout_constraintStart_toStartOf="@id/shop_dialog_tv"/>

    <TextView
        android:id="@+id/shop_dialog_activity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쇼핑 활동"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/shop_dialog_activity_iv"
        app:layout_constraintBottom_toBottomOf="@id/shop_dialog_activity_iv"
        app:layout_constraintStart_toEndOf="@id/shop_dialog_activity_iv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/shop_dialog_line_iv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/shop_dialog_activity_iv"/>

    <TextView
        android:id="@+id/shop_dialog_instagram_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram Shop"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/shop_dialog_line_iv"
        app:layout_constraintStart_toStartOf="@id/shop_dialog_tv"/>

    <TextView
        android:id="@+id/shop_dialog_shop_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/shop_dialog_instagram_tv"
        app:layout_constraintStart_toStartOf="@id/shop_dialog_tv"/>

    <TextView
        android:id="@+id/shop_dialog_video_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동영상"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/shop_dialog_shop_tv"
        app:layout_constraintStart_toStartOf="@id/shop_dialog_tv"/>

    <TextView
        android:id="@+id/shop_dialog_editor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="에디터 추천"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/shop_dialog_video_tv"
        app:layout_constraintStart_toStartOf="@id/shop_dialog_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>