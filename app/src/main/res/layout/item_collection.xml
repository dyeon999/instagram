<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/collection_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/collection_img_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/collection"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/collection_profile_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_ex2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/collection_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seventeenofficial"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginStart="7dp"
                app:layout_constraintTop_toTopOf="@id/collection_profile_iv"
                app:layout_constraintStart_toEndOf="@id/collection_profile_iv"
                app:layout_constraintBottom_toBottomOf="@id/collection_profile_iv"/>

            <TextView
                android:id="@+id/collection_follow_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  · 팔로우"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintTop_toTopOf="@id/collection_id_tv"
                app:layout_constraintStart_toEndOf="@id/collection_id_tv"/>


            <TextView
                android:id="@+id/collection_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bella Vita Rosa"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="35sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@id/collection_profile_iv"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/collection_item_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="제품 "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/collection_profile_iv"
                app:layout_constraintBottom_toTopOf="@id/collection_name_tv"/>

            <TextView
                android:id="@+id/collection_total_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="13"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/collection_item_tv"
                app:layout_constraintBottom_toTopOf="@id/collection_name_tv"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="개"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/collection_total_tv"
                app:layout_constraintBottom_toTopOf="@id/collection_name_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>