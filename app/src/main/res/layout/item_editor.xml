<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_editor_cv"
        android:layout_width="170dp"
        android:layout_height="170dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_editor_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shop_item3"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/item_editor_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the SUNSHINE bag"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_editor_cv"/>

    <TextView
        android:id="@+id/item_editor_brand_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="joshuaseventeen"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_editor_name_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>