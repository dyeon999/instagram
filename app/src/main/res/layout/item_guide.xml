<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/guide_cv"
        android:layout_width="170dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/guide_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/guide"
            android:scaleType="centerCrop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/guide_profile_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/profile_ex1"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/guide_brand_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ottomanhands"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginStart="7dp"
                app:layout_constraintStart_toEndOf="@id/guide_profile_iv"
                app:layout_constraintTop_toTopOf="@id/guide_profile_iv"
                app:layout_constraintBottom_toBottomOf="@id/guide_profile_iv"/>

            <TextView
                android:id="@+id/guide_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Valentine's Day Gift Guide"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guide_profile_iv"
                app:layout_constraintStart_toStartOf="@id/guide_profile_iv"/>

            <TextView
                android:id="@+id/guide_item_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="제품 "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@id/guide_profile_iv"
                app:layout_constraintBottom_toTopOf="@id/guide_name_tv"/>

            <TextView
                android:id="@+id/guide_total_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/guide_item_tv"
                app:layout_constraintBottom_toTopOf="@id/guide_name_tv"/>

            <TextView
                android:id="@+id/guide_item2_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="개"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/guide_total_tv"
                app:layout_constraintBottom_toTopOf="@id/guide_name_tv"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>