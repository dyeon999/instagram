<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/shipping_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세 정보 및 배송"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/shipping_more_ib"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow_down_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shipping_more_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/shipping_title_tv">

        <TextView
            android:id="@+id/shipping_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배송비 2500"
            android:textColor="@color/grey"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/shipping_review_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | 리뷰 : "
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/shipping_price_tv"/>

        <TextView
            android:id="@+id/shipping_review_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/shipping_review_tv"/>

        <TextView
            android:id="@+id/shipping_need_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보가 더 필요하세요?"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_price_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/shipping_website_cv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="2dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_need_tv">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shop.treemingbird"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에게 메시지 보내기"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/shipping_more_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제품 상세 정보"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_website_cv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/shipping_brand_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="브랜드 ·"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_more_detail_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/shipping_brand_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자체브랜드"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/shipping_brand_tv"
            app:layout_constraintStart_toEndOf="@id/shipping_brand_tv"/>


        <TextView
            android:id="@+id/shipping_more_shop_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop 정보"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_brand_tv"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shipping_brand_profile_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/basic_profile"
            app:layout_constraintTop_toTopOf="@id/shipping_brand_id_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/shipping_brand_follow_tv"/>

        <TextView
            android:id="@+id/shipping_brand_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shop.treeemingbird"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_more_shop_tv"
            app:layout_constraintStart_toEndOf="@id/shipping_brand_profile_iv"/>

        <TextView
            android:id="@+id/brand_seperate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="·"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@id/shipping_brand_id_tv"
            app:layout_constraintStart_toEndOf="@id/shipping_brand_id_tv"/>

        <TextView
            android:id="@+id/brand_follow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로우"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_blue"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@id/shipping_brand_id_tv"
            app:layout_constraintStart_toEndOf="@id/brand_seperate_tv"/>

        <TextView
            android:id="@+id/shipping_brand_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="트리밍버드"
            android:textColor="@color/grey"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_brand_id_tv"
            app:layout_constraintStart_toStartOf="@id/shipping_brand_id_tv"/>

        <TextView
            android:id="@+id/shipping_brand_follow_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blueblue님 외 1만명이 팔로우합니다"
            android:textColor="@color/grey"
            android:textSize="13sp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/shipping_brand_name_tv"
            app:layout_constraintStart_toStartOf="@id/shipping_brand_name_tv"/>


        <TextView
            android:id="@+id/shop_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop 정보 보기"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@id/shipping_brand_id_tv"
            app:layout_constraintTop_toBottomOf="@id/shipping_brand_follow_tv"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/shipping_message_cv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:strokeColor="@color/light_gray"
            app:strokeWidth="2dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/shop_more_tv">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop 보기"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>