<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/write_reply_heart_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/emoji_heart"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/write_reply_raised_emoji"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/write_reply_raised_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/emoji_raised_hands"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/write_reply_heart_emoji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/write_reply_fire_emoji"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/write_reply_fire_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/emoji_fire"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/write_reply_raised_emoji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/write_reply_clap_emoji"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/write_reply_clap_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/emoji_congraturation"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/write_reply_fire_emoji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/write_reply_sad_emoji"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/write_reply_sad_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/emoji_sad"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/write_reply_clap_emoji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/write_reply_heart_face_emoji"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/write_reply_heart_face_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/emoji_heart_face"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/write_reply_sad_emoji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/write_reply_fear_emoji"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/write_reply_fear_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/emoji_fear"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/write_reply_heart_face_emoji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/write_reply_lol_emoji"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/write_reply_lol_emoji"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/emoji_lol"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/write_reply_fear_emoji"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/write_reply_profile_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toBottomOf="@id/write_reply_heart_emoji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/write_reply_background"
        android:hint="조은(으)로 댓글 달기..."
        android:textColorHint="#D5D5D5"
        android:inputType="text"
        android:paddingVertical="12dp"
        android:paddingHorizontal="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/write_reply_profile_iv"
        app:layout_constraintStart_toEndOf="@id/write_reply_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/write_reply_profile_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>